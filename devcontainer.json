{
    // "image": "devcontainer:latest",
    "image": "devcontainer:latest",
    "forwardPorts": [
        3000,
        8050
    ],
    "extensions": [
        "ms-azuretools.vscode-docker",
        "ms-vscode.cpptools",
        "ms-vscode.cpptools-extension-pack",
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-vscode-remote.remote-ssh",
        "kevinrose.vsc-python-indent",
        "editorconfig.editorconfig",
        "nvidia.nsight-vscode-edition",
        "mhutchie.git-graph",
        "znck.grammarly",
        "james-yu.latex-workshop",
        "github.copilot",
        "janisdd.vscode-edit-csv",
        "marus25.cortex-debug"
    ],
    "name": "mycontainer",
    "runArgs": [
        "--add-host=host.docker.internal:host-gateway",
        // "--net=host",
        // "--gpus=all",
        // "--privileged",
        // "--device=/dev/spidev0.0",
        // "--net=host",
        // "--runtime=nvidia",
        // "--ipc=host",
        // "--device=/dev/bus/usb/001/002"
        "${localEnv:VS_DEVCONT_PICOPROBE}",
        "${localEnv:VS_DEVCONT_ACM}"
    ],
    // "remoteEnv": {DISPLAY},
    "initializeCommand": "cd ${localWorkspaceFolder}/.devcontainer && python3 initialize.py",
    "postStartCommand": "cd ${containerWorkspaceFolder}/.devcontainer && python3 post_start.py"
    // "workspaceFolder": "/workspaces",
    // "workspaceMount": "source=sensorrig-ws,target=/workspace,type=volume",
}