{
    // "image": "devcontainer:latest",
    "image": "devcontainer:latest",
    "name": "devcontainer",
    "customizations": {
        "vscode": {
            "extensions": [
                "eamodio.gitlens",
                "github.copilot",
                "ms-python.python",
                "ms-python.vscode-pylance",
                "ms-python.black-formatter",
                "ms-toolsai.jupyter",
                "kevinrose.vsc-python-indent",
                "modular-mojotools.vscode-mojo",
                "ms-vscode.cpptools-extension-pack",
                "nvidia.nsight-vscode-edition",
                "janisdd.vscode-edit-csv",
                "svelte.svelte-vscode",
                "bradlc.vscode-tailwindcss",
                "visualstudioexptteam.vscodeintellicode"
                // "znck.grammarly",
                // "james-yu.latex-workshop",
            ]
        }
    },
    "runArgs": [
        "--runtime=nvidia",
        "--privileged",
        "--net=host",
        "--ipc=host",
        // "--add-host=host.docker.internal:host-gateway",
        // "${localEnv:DEVCONTAINER_RUN_ARGS}",
        // "--gpus=all",
        // "--net=host",
        // "--pid=host"
        // "--group-add $(getent group jtop | awk -F: '{print $3}')",
        // "-v /run/jtop.sock:/run/jtop.sock"
        // "-v /opt/nvidia/nsight-systems-cli/:/opt/nvidia/nsight-systems-cli"
        "--device=/dev/ACM0",
        "--device=/dev/ACM1"
        // "--ipc=host",
    ],
    "mounts": [
        "source=/run/jtop.sock,target=/run/jtop.sock,type=bind",
        // "source=/dev,target=/dev"
    ],
}